body
  background #33ccff


.timer
  background #3366ff
  width 300px
  height 300px
  margin 0 auto
  border-radius 150px

.timer-text
  text-align center
  padding-top 100px
  font-family "Trebuchet MS", Helvetica, sans-serif
  font-size 73px
  color white
  -moz-text-shadow 2px 2px 1px #000
  -webkit-text-shadow 2px 2px 1px #000
  text-shadow 2px 2px 1px #000

.timer-controls
  text-align center
  margin 0 auto
  width 300px